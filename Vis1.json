{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 420,
  "height": 360,
  "title": {
    "text": "Household Income by State (2022)",
    "anchor": "start",
    "fontSize": 16
  },
  "projection": {
    "type": "mercator",
    "center": [109.5, 3],
    "scale": 1200,
    "translate": [210, 180]
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vega/vega-datasets/main/data/world-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "transform": [{"filter": "datum.id != '458'"}],
      "mark": {"type": "geoshape", "fill": "#e0e0e0", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/favelia/3179/main/geoBoundaries-MYS-ADM1.json",
        "format": {"type": "topojson", "feature": "geoBoundaries-MYS-ADM1"}
      },
      "transform": [
        {
          "lookup": "properties.shapeName",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/favelia/3179/main/hies_state.csv"
            },
            "key": "state",
            "fields": ["income_mean", "expenditure_mean", "gini", "poverty"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "income_mean",
          "type": "quantitative",
          "title": "Mean Income (RM)",
          "scale": {"scheme": "blues"}
        },
        "tooltip": [
          {"field": "properties.shapeName", "title": "State"},
          {"field": "income_mean", "title": "Mean Income (RM)"}
        ]
      }
    },
    {
      "data": {
        "values": [
          {"lon": 101.5, "lat": 3.0, "text": "Kuala Lumpur has the highest mean income of RM 13,325"}
        ]
      },
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 10,
        "dy": -10,
        "fontSize": 11,
        "fontWeight": "bold",
        "color": "#1a1a1a"
      },
      "encoding": {
        "longitude": {"field": "lon"},
        "latitude": {"field": "lat"},
        "text": {"field": "text"}
      }
    },
    {
      "data": {
        "values": [
          {"lon": 101.5, "lat": 3.0},
          {"lon": 102, "lat": 3.5}
        ]
      },
      "mark": {"type": "line", "color": "black", "strokeWidth": 1},
      "encoding": {
        "longitude": {"field": "lon"},
        "latitude": {"field": "lat"}
      }
    }
  ],
  "config": {"background": "transparent"}
}
