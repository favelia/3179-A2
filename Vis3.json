{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 680,
  "height": 440,
  "title": {
    "text": "Poverty Rate by State in Malaysia (2022)",
    "anchor": "start",
    "fontSize": 15
  },
  "data": {
    "url": "https://raw.githubusercontent.com/favelia/3179/main/hies_state.csv"
  },
  "transform": [
    {
      "calculate": "indexof(['Sabah','Sarawak','Labuan'], datum.state) >= 0 ? 'East Malaysia' : 'Peninsular Malaysia'",
      "as": "region"
    }
  ],
  "mark": {"type": "rule"},
  "encoding": {
    "y": {
      "field": "state",
      "type": "ordinal",
      "sort": "-x",
      "title": "State"
    },
    "x": {
      "field": "poverty",
      "type": "quantitative",
      "title": "Poverty Rate (%)"
    },
    "tooltip": [
      {"field": "state", "title": "State"},
      {"field": "poverty", "title": "Poverty Rate (%)"},
      {"field": "region", "title": "Region"}
    ],
    "color": {
      "field": "region",
      "type": "nominal",
      "scale": {"domain": ["Peninsular Malaysia", "East Malaysia"], "range": ["#1f77b4", "#ff7f0e"]},
      "legend": {"title": "Region"}
    }
  },
  "layer": [
    {
      "mark": {"type": "rule", "strokeWidth": 2, "color": "#999"},
      "encoding": {
        "x": {"field": "poverty"},
        "y": {"field": "state"}
      }
    },
    {
      "mark": {"type": "circle", "size": 120, "stroke": "black", "strokeWidth": 0.5},
      "encoding": {
        "x": {"field": "poverty"},
        "y": {"field": "state"},
        "color": {"field": "region"}
      }
    }
  ],
  "config": {
    "axis": {"labelFontSize": 12, "titleFontSize": 13},
    "view": {"stroke": "transparent"},
    "background": "transparent"
  }
}
