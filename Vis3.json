{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 680,
  "height": 440,
  "title": {
    "text": "Poverty Rate by State in Malaysia (2022)",
    "anchor": "start",
    "fontSize": 14
  },
  "projection": {
    "type": "mercator",
    "center": [109.5, 3],
    "scale": 1800,
    "translate": [340, 240]
  },
  "layer": [
    {
      "data": {"graticule": true},
      "mark": {"type": "geoshape", "stroke": "#cccccc", "strokeWidth": 0.5}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vega/vega-datasets/main/data/world-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "transform": [{"filter": "datum.id != '458'"}],
      "mark": {"type": "geoshape", "fill": "#e0e0e0", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/favelia/3179/main/geoBoundaries-MYS-ADM1.json",
        "format": {"type": "topojson", "feature": "geoBoundaries-MYS-ADM1"}
      },
      "transform": [
        {
          "lookup": "properties.shapeName",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/favelia/3179/main/hies_state.csv"
            },
            "key": "state",
            "fields": ["poverty", "income_mean", "income_median", "gini"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "poverty",
          "type": "quantitative",
          "title": "Poverty Rate (%)",
          "scale": {"scheme": "purples"}
        },
        "tooltip": [
          {"field": "properties.shapeName", "title": "State"},
          {"field": "poverty", "title": "Poverty Rate (%)"},
          {"field": "income_mean", "title": "Mean Income (RM)"},
          {"field": "income_median", "title": "Median Income (RM)"},
          {"field": "gini", "title": "Gini Index"}
        ]
      }
    },
    {
      "data": {
        "values": [
          {
            "lon": 116.5,
            "lat": 5.5,
            "text": "Sabah dominates the poverty rate with almost 20%"
          }
        ]
      },
      "mark": {
        "type": "text",
        "align": "right",
        "dx": -25,
        "dy": -15,
        "fontSize": 12,
        "fontWeight": "bold",
        "color": "#1a1a1a"
      },
      "encoding": {
        "longitude": {"field": "lon"},
        "latitude": {"field": "lat"},
        "text": {"field": "text"}
      }
    },
    {
      "data": {
        "values": [
          {"lon": 114, "lat": 5.8},
          {"lon": 115.8, "lat": 5.3}
        ]
      },
      "mark": {"type": "line", "color": "black", "strokeWidth": 1.2},
      "encoding": {
        "longitude": {"field": "lon"},
        "latitude": {"field": "lat"}
      }
    }
  ],
  "config": {"background": "transparent"}
}
